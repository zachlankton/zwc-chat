# Database Configuration
MONGODB_URI=mongodb://localhost:27017/zwcchat
MONGODB_DB_NAME=zwcchat

# WorkOS Authentication (Required)
# Get these from https://dashboard.workos.com
WORKOS_API_KEY=sk_test_your_workos_api_key_here
WORKOS_CLIENT_ID=client_your_workos_client_id_here
WORKOS_REDIRECT_URI=https://localhost:3000/api/auth/callback
WORKOS_COOKIE_PW=your_secure_cookie_password_min_32_chars

# OpenRouter API Configuration (Required)
# Get your API key from https://openrouter.ai/keys
OPENROUTER_KEY=sk-or-v1-your_openrouter_api_key_here

# For provisioning user API keys (Required)
OPENROUTER_PROVISIONING_KEY=sk-or-v1-your_provisioning_key_here

# Security (Required)
# Used to encrypt OpenRouter API secrets at rest
# Generate with: openssl rand -hex 32
MASTER_KEY=your_64_character_hex_master_key_for_encryption_here

# Server Configuration (Optional)
# ADMIN_KEY=key_for_admin_operations (future)
# ORIGIN=http://localhost:3000
DEV=TRUE
HTTPS=TRUE
# MAX_USER_LIMIT=10

# Build Information (Set automatically during Docker build)
# COMMIT_HASH=abc123def456
# NODE_ENV=production
